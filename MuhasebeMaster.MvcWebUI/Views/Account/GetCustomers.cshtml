@model MuhasebeMaster.MvcWebUI.Models.AccountViewModel
@{
    ViewData["Title"] = "GetCustomers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card-box table-responsive">
            <div class="dropdown pull-right">
                <a href="#" class="dropdown-toggle card-drop" data-toggle="dropdown" aria-expanded="false">
                    <i class="zmdi zmdi-more-vert"></i>
                </a>
                <ul class="dropdown-menu" role="menu">
                    <li><a href="#" data-toggle="modal" data-target="#product-adding-modal"> Yeni Ekle </a></li>
                </ul>
            </div>

            <h4 class="header-title m-t-0 m-b-30">Müşteriler</h4>

            <div id="datatable-buttons_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                <table id="datatable-buttons" class="table table-striped table-bordered dataTable no-footer dtr-inline collapsed" role="grid" aria-describedby="datatable-buttons_info">
                    <thead>
                        <tr role="row">
                            <th class="sorting_asc" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 20px;">Ad Soyad</th>
                            <th class="sorting_" tabindex="1" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Model: activate to sort column descending" style="width: 450px;">Telefon</th>
                            <th class="sorting" tabindex="2" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-label="Quantity: activate to sort column ascending" style="width: 100px;">Şehir</th>
                            <th class="sorting" tabindex="3" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-label="AddedDate: activate to sort column ascending" style="width: 200px;">İlçe</th>
                            <th class="sorting" tabindex="4" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-label="AddedDate: activate to sort column ascending" style="width: 200px;">Tarih</th>
                            <th rowspan="1" colspan="1" style="width: 50px; display: none" ;>&</th>
                            <th rowspan="1" colspan="1" style="width: 50px; display: none" ;>&</th>
                            <th rowspan="1" colspan="1" style="width: 50px; display: none" ;>&</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Accounts)
                        {
                            <tr role="row" class="odd">
                                <td class="sorting_1" tabindex="0">@item.Fullname</td>
                                <td>@item.Phone</td>
                                <td>@item.City</td>
                                <td>@item.District</td>
                                <td>@item.AddedDate.ToString("dd/MM/yyyy")</td>
                                @*guid oldugu ıcın parametreyı tek tırnakla gonderıyorum*@
                                <td align="center"><button class="btn btn-purple" onclick="editProduct('@item.Id')">Güncelle</button></td>
                                <td align="center"><button class="btn btn-danger" onclick="deleteProduct('@item.Id')">Sil</button></td>
                                <td align="center"><a href="/Account/GetAccountDetail/@item.Id" class="btn btn-info">Detay</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <p>Toplam Müşteri TL Bakiyesi : @ViewBag.CustomerTLBalance </p>
                <p>Toplam Müşteri DOLAR Bakiyesi : @ViewBag.CustomerDollarBalance </p>
            </div>
        </div>
    </div><!-- end col -->
</div>
<div id="product-adding-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <form asp-controller="Account" asp-action="Add" method="post" enctype="multipart/form-data">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title"><i class="fa fa-plus-circle"></i>Ekle</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="field-1" class="control-label">Ad Soyad</label>
                                <input asp-for="@Model.Account.Fullname" type="text" class="form-control" id="field-1" placeholder="e.g. Ad Soyad">
                            </div>
                            <div class="form-group">
                                <label for="field-2" class="control-label">Telefon</label>
                                <input asp-for="@Model.Account.Phone" type="text" class="form-control" id="field-1" placeholder="e.g. Telefon">
                            </div>
                            <div class="form-group">
                                <label for="field-3" class="control-label">Şehir</label>
                                <input asp-for="@Model.Account.City" type="text" class="form-control" id="field-1" placeholder="e.g. Şehir">
                            </div>
                            <div class="form-group">
                                <label for="field-4" class="control-label">İlçe</label>
                                <input asp-for="@Model.Account.District" type="text" class="form-control" id="field-1" placeholder="e.g. İlçe">
                            </div>
                            <div class="form-group">
                                <label for="field-5" class="control-label">Adres</label>
                                <textarea asp-for="@Model.Account.Address" type="text" class="form-control autogrow" id="field-1" placeholder="Adres" style="overflow:hidden;word-wrap:break-word; resize:horizontal; height:104px;"></textarea>
                            </div>
                            <div class="form-group">
                                    <label for="field-6" class="control-label">Hesap Türü</label>
                                    <select class="form-control" id="drpAccountTypes" asp-for="@Model.Account.AccountType" asp-items="@ViewBag.AccountTypes">
                                        <option disabled selected value="-1">--Choose--</option>
                                    </select>
                              </div>
                              <div class="form-group">
                                    <label for="field-7" class="control-label">Ücret Türü</label>
                                    <select class="form-control" id="drpCategories" asp-for="@Model.Account.CostType" asp-items="@ViewBag.CostTypes">
                                        <option disabled selected value="-1">--Choose--</option>
                                    </select>
                               </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">×</button>
                    <button type="submit" class="btn btn-purple waves-effect waves-light">Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div><!-- /.modal -->
<div id="product-updating-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <form asp-controller="Account" asp-action="Edit" method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title"><i class="fa fa-plus-circle"></i> Düzenle</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <input asp-for="@Model.Account.Id" id="accountId" hidden/>
                            <div class="form-group">
                                <label for="field-8" class="control-label">Ad Soyad</label>
                                <input asp-for="@Model.Account.Fullname" type="text" class="form-control" id="fullname" placeholder="e.g. Ad Soyad">
                            </div>
                            <div class="form-group">
                                <label for="field-9" class="control-label">Telefon</label>
                                <input asp-for="@Model.Account.Phone" type="text" class="form-control" id="phone" placeholder="e.g. Telefon">
                            </div>
                            <div class="form-group">
                                <label for="field-10" class="control-label">Şehir</label>
                                <input asp-for="@Model.Account.City" type="text" class="form-control" id="city" placeholder="e.g. Şehir">
                            </div>
                            <div class="form-group">
                                <label for="field-11" class="control-label">İlçe</label>
                                <input asp-for="@Model.Account.District" type="text" class="form-control" id="district" placeholder="e.g. İlçe">
                            </div>
                            <div class="form-group">
                                <label for="field-12" class="control-label">Adres</label>
                                <textarea asp-for="@Model.Account.Address" type="text" class="form-control autogrow" id="address" placeholder="Adres" style="overflow:hidden;word-wrap:break-word; resize:horizontal; height:104px;"></textarea>
                            </div>
                             @*<div class="form-group">
                                    <label for="field-13" class="control-label">Hesap Türü</label>
                                    <select class="form-control" id="drpAccountTypes" asp-for="@Model.Account.AccountType" asp-items="@ViewBag.AccountTypes">
                                        <option disabled selected value="-1">--Choose--</option>
                                    </select>
                              </div>
                              <div class="form-group">
                                    <label for="field-14" class="control-label">Ücret Türü</label>
                                    <select class="form-control" id="drpCostTypes" asp-for="@Model.Account.CostType" asp-items="@ViewBag.CostTypes">
                                        <option disabled selected value="-1">--Choose--</option>
                                    </select>
                               </div>*@
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">×</button>
                    <button type="submit" class="btn btn-purple waves-effect waves-light">Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div><!-- /.modal -->

<script type="text/javascript">
    function editProduct(id) {
        $.get("/Account/Edit", { id: id })
            .done(function (result) {
                debugger;
                $('#accountId').val(result.id);
                $('#fullname').val(result.fullname);
                $('#phone').val(result.phone);
                $('#city').val(result.city);
                $('#district').val(result.district);
                $('#address').val(result.address);
                //$('#drpAccountTypes').val(result.accountType);
                //$('#drpCostTypes').val(result.costType);
                $('#product-updating-modal').modal('show');
            })
    }

    function deleteProduct(id) {
        swal({
            title: "Silmek istediğinizden emin misiniz?",
            text: "Silinen kayitlar bir daha listelenmez!",
            type: "warning",
            showCancelButton: true,
            cancelButtonText: "Iptal",
            confirmButtonClass: "btn-warning",
            confirmButtonText: "Evet, silebilirsin!",
            closeOnConfirm: false
        },
            function () {
                $.get("/Account/Delete/", { id: id })
                    .done(function (result) {
                        if (result == 0) {
                            swal("Warning!", "Bir Hata Olustu!", "warning");
                        }
                        else {
                            swal("Basarili!", "Isleminiz basarili bir sekilde gerceklestirildi!", "success");
                            location.reload();
                        }
                    })
            });
    }
</script>



