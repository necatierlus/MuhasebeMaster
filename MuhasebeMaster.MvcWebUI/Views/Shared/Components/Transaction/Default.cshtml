@model MuhasebeMaster.MvcWebUI.Models.TransactionViewModel
<div class="row">
    <div class="col-sm-12">
        <div class="card-box table-responsive">
            <div class="dropdown pull-right">
                <a href="#" class="dropdown-toggle card-drop" data-toggle="dropdown" aria-expanded="false">
                    <i class="zmdi zmdi-more-vert"></i>
                </a>
                <ul class="dropdown-menu" role="menu">
                    <li><a href="#" data-toggle="modal" data-target="#product-adding-modal"> Yeni Ekle </a></li>
                </ul>
            </div>

            <h4 class="header-title m-t-0 m-b-30">İşlemler</h4>

            <div id="datatable-buttons_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                <table id="datatable-buttons" class="table table-striped table-bordered dataTable no-footer dtr-inline collapsed" role="grid" aria-describedby="datatable-buttons_info">
                    <thead>
                        <tr role="row">
                            <th class="sorting_asc" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 100px;">Ürün</th>
                            <th class="sorting_asc" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 100px;">Text</th>
                            <th class="sorting_" tabindex="1" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Model: activate to sort column descending" style="width: 450px;">Açıklama</th>
                            <th class="sorting_" tabindex="1" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Model: activate to sort column descending" style="width: 100px;">Ödeme</th>
                            <th class="sorting_" tabindex="1" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Model: activate to sort column descending" style="width: 100px;">Çek Tarihi</th>
                            <th class="sorting_" tabindex="1" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Model: activate to sort column descending" style="width: 100px;">Satış Türü</th>
                            <th class="sorting" tabindex="2" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-label="Quantity: activate to sort column ascending" style="width: 100px;">Adet</th>
                            <th class="sorting" tabindex="3" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-label="AddedDate: activate to sort column ascending" style="width: 200px;">Tutar</th>
                            <th class="sorting" tabindex="4" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-label="AddedDate: activate to sort column ascending" style="width: 200px;">Tarih</th>
                            <th rowspan="1" colspan="1" style="width: 50px; display: none" ;>&</th>
                            <th rowspan="1" colspan="1" style="width: 50px; display: none" ;>&</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.TransactionModel)
                        {
                        <tr role="row" class="odd">
                            <td class="sorting_1" tabindex="0">@item.ProductName</td>
                            <td>@item.Text</td>
                            <td>@item.Description</td>
                            <td>@item.PaymentType</td>
                            <td>@item.CheckDate</td>
                            <td>
                                @if (item.Income)
                                {
                                    <text>Tahsilat</text>
                                }
                                else
                                {
                                    <text>Alacak</text>
                                }
                            </td>
                            <td>@item.Quantity</td>
                            <td>@item.Price</td>
                            <td>@item.AddedDate</td>
                            @*Guid oldugu ıcın parametreyi tek tırnakla gonderıyorum*@
                            <td align="center"><button class="btn btn-purple" onclick="editProduct('@item.Id')">Güncelle</button></td>
                            <td align="center"><button class="btn btn-danger" onclick="deleteProduct('@item.Id')">Sil</button></td>
                            @*<td align="center"><a href="/Account/GetAccountDetail/@item.Id" class="btn btn-info">Detay</a></td>*@
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div><!-- end col -->
</div>

<div id="product-adding-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <form asp-controller="Account" asp-action="AddTransaction" method="post" enctype="multipart/form-data">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title"><i class="fa fa-plus-circle"></i>Ekle</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            @*<input asp-for="@Model.Account.Id" id="accountId" hidden />*@
                            <div class="form-group">
                                <label for="field-1" class="control-label">Ürün</label>
                                <select class="form-control" id="drpProduct" name="drpProduct" asp-items="@ViewBag.SalesTypes">
                                    <option disabled selected value="-1">--Choose--</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="field-1" class="control-label">Ürün</label>
                                <select class="form-control" id="drpProduct" asp-for="@Model.Transaction.ProductId" asp-items="@ViewBag.ProdModels">
                                    <option disabled selected value="-1">--Choose--</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="field-2" class="control-label">Text</label>
                                <input asp-for="@Model.Transaction.Text" type="text" class="form-control" id="field-1" placeholder="e.g. Text">
                            </div>
                            <div class="form-group">
                                <label for="field-3" class="control-label">Miktar</label>
                                <input asp-for="@Model.Transaction.Quantity" type="text" class="form-control" id="field-1" placeholder="e.g. Miktar">
                            </div>
                            <div class="form-group">
                                <label for="field-4" class="control-label">Tutar</label>
                                <input asp-for="@Model.Transaction.Price" type="text" class="form-control" id="field-1" placeholder="e.g. Tutar">
                            </div>
                            <div class="form-group">
                                <label for="field-5" class="control-label">Açıklama</label>
                                <input asp-for="@Model.Transaction.Description" type="text" class="form-control" id="field-1" placeholder="e.g. Açıklama">
                            </div>
                            <div class="form-group">
                                <label for="field-6" class="control-label">Ödeme  Türü</label>
                                <select class="form-control" id="drpPaymentType" asp-for="@Model.Transaction.PaymentType" asp-items="@ViewBag.PaymentTypes">
                                    <option disabled selected value="-1">--Choose--</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="field-7" class="control-label">Çek Geçerlilik Tarihi</label>
                                <input asp-for="@Model.Transaction.CheckDate" type="date" class="form-control" id="field-1" placeholder="e.g. Çek Geçerlilik Tarihi">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">×</button>
                    <button type="submit" class="btn btn-purple waves-effect waves-light">Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div><!-- /.modal -->

<div id="product-updating-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <form asp-controller="Account" asp-action="EditTransaction" method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title"><i class="fa fa-plus-circle"></i> Düzenle</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <input asp-for="@Model.Transaction.Id" id="transId" hidden />
                            @*<div class="form-group">
            <label for="field-1" class="control-label">Ürün</label>
            <select class="form-control" id="drpAccountTypes" asp-for="@Model.Account.AccountType" asp-items="@ViewBag.AccountTypes">
                <option disabled selected value="-1">--Choose--</option>
            </select>
        </div>*@
                            <div class="form-group">
                                <label for="field-2" class="control-label">Text</label>
                                <input asp-for="@Model.Transaction.Text" type="text" class="form-control" id="Text" placeholder="e.g. Text">
                            </div>
                            <div class="form-group">
                                <label for="field-2" class="control-label">Miktar</label>
                                <input asp-for="@Model.Transaction.Quantity" type="text" class="form-control" id="Quantity" placeholder="e.g. Miktar">
                            </div>
                            <div class="form-group">
                                <label for="field-3" class="control-label">Tutar</label>
                                <input asp-for="@Model.Transaction.Price" type="text" class="form-control" id="Price" placeholder="e.g. Tutar">
                            </div>
                            <div class="form-group">
                                <label for="field-4" class="control-label">Açıklama</label>
                                <input asp-for="@Model.Transaction.Description" type="text" class="form-control" id="Description" placeholder="e.g. Açıklama">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">×</button>
                    <button type="submit" class="btn btn-purple waves-effect waves-light">Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div><!-- /.modal -->
    <script>
        function editProduct(id) {
            $.get("/Account/EditTransaction", { id: id })
                .done(function (result) {
                    $('#transId').val(result.id);
                    $('#Quantity').val(result.quantity);
                    $('#Price').val(result.price);
                    $('#Description').val(result.description);
                    $('#Text').val(result.text);
                    /*$('#drpAccountTypes').val(result.accountType);*/
                   /* $('#drpCostTypes').val(result.costType);*/
                    $('#product-updating-modal').modal('show');
                })
        }

        function deleteProduct(id) {
            swal({
                title: "Silmek istediğinizden emin misiniz?",
                text: "Silinen kayitlar bir daha listelenmez!",
                type: "warning",
                showCancelButton: true,
                cancelButtonText: "Iptal",
                confirmButtonClass: "btn-warning",
                confirmButtonText: "Evet, silebilirsin!",
                closeOnConfirm: false
            },
                function () {
                    $.get("/Account/DeleteTransaction/", { id: id })
                        .done(function (result) {
                            if (result == 0) {
                                swal("Warning!", "Bir Hata Olustu!", "warning");
                            }
                            else {
                                swal("Basarili!", "Isleminiz basarili bir sekilde gerceklestirildi!", "success");
                                location.reload();
                            }
                        })
                });
        }


    </script>


